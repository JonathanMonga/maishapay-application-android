                    <ImageView app:srcCompat="@drawable/ic_form_nome" style="@style/form_icon_left" />
                    <LinearLayout android:layout_weight="1.0" style="@style/form_linha_divisor">
                        <EditText android:id="@id/ET_Nome" android:nextFocusDown="@id/ET_Sobrenome" android:hint="@string/primeiro_nome" android:inputType="textCapWords" style="@style/form_edit_text" />
