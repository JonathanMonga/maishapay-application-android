                    <LinearLayout android:layout_weight="1.0" style="@style/form_linha_divisor">
                        <EditText android:id="@id/ET_Sobrenome" android:nextFocusDown="@id/ET_Phone" android:hint="@string/segundo_nome" android:inputType="textCapWords" style="@style/form_edit_text" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@id/LinhaFormPhone" style="@style/form_linha">
                    <ImageView app:srcCompat="@drawable/ic_form_phone" style="@style/form_icon_left" />
                    <LinearLayout style="@style/form_linha_divisor">
                        <EditText android:id="@id/ET_Phone" android:nextFocusDown="@id/ET_Email" android:hint="@string/telephone" android:inputType="phone" style="@style/form_edit_text" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@id/LinhaFormEmail" style="@style/form_linha">
                    <ImageView app:srcCompat="@drawable/ic_form_email" style="@style/form_icon_left" />
