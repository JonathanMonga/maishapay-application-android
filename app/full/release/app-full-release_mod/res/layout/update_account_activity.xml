                    <LinearLayout style="@style/form_linha_divisor">
                        <EditText android:id="@id/ET_Adressse" android:nextFocusDown="@id/ET_Ville" android:hint="@string/adresse" android:inputType="textEmailAddress" style="@style/form_edit_text" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:id="@id/LinhaFormAVille" style="@style/form_linha">
                    <ImageView app:srcCompat="@drawable/ic_form_destino" style="@style/form_icon_left" />
                    <LinearLayout style="@style/form_linha_divisor">
                        <EditText android:id="@id/ET_Ville" android:nextFocusDown="@id/ET_Senha" android:hint="@string/ville" android:inputType="textEmailAddress" style="@style/form_edit_text" />
                    </LinearLayout>
                </LinearLayout>
                <Button android:id="@id/BTN_CriarConta" android:layout_marginLeft="10.0dip" android:layout_marginTop="20.0dip" android:layout_marginRight="10.0dip" android:layout_marginBottom="20.0dip" android:text="Confirmer" style="@style/botao_azul_canto_redondo" />
