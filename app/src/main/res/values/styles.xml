        <item name="android:paddingBottom">15.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/padding</item>
    </style>

    <style name="form_edit_text_multiline" parent="@style/form_edit_text">
        <item name="android:gravity">top</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">5</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
