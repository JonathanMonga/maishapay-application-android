        <item name="android:background">@color/branco</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:minHeight">@dimen/form_field_height</item>
    </style>

    <style name="form_linha_obs" parent="@style/form_linha">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="form_icon_left_top" parent="@style/form_icon_left">
        <item name="android:layout_gravity">top</item>
