<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        android:clickable="true"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_francs"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_red_600"
                    android:text="Solde francs" />

                <org.fabiomsr.moneytextview.MoneyTextView
                    android:id="@+id/TV_Francs"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_francs"
                    app:amount="0"
                    app:symbol="Fc"
                    app:baseTextColor="@color/md_green_600"
                    app:baseTextSize="20sp"
                    app:decimalDigitsTextSize="15sp"
                    app:decimalGravity="bottom"
                    app:symbolTextSize="15sp"
                    app:decimalSeparator=","
                    app:symbolGravity="bottom" />

            </RelativeLayout>

           <View
               android:layout_width="0dp"
               android:background="@color/md_green_600"
               android:layout_height="50dp"
               android:layout_margin="10dp"
               android:layout_weight="0.01"/>

            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_dollars"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_red_600"
                    android:text="Solde dollars" />

                <org.fabiomsr.moneytextview.MoneyTextView
                    android:id="@+id/TV_Dollars"
                    fontPath="fonts/Roboto-Light.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title_dollars"
                    app:amount="0"
                    app:symbol="$"
                    app:baseTextColor="@color/md_green_600"
                    app:baseTextSize="20sp"
                    app:decimalDigitsTextSize="15sp"
                    app:decimalGravity="bottom"
                    app:symbolTextSize="15sp"
                    app:decimalSeparator=","
                    app:symbolGravity="bottom" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>