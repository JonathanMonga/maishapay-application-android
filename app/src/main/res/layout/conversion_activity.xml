<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:ignore="MissingPrefix">

    <include layout="@layout/appbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1.0">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:text="Suivre le taux d'echange en temps reÃ©l"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    android:background="@color/ab_despesa"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="1dp"
                    app:cardPreventCornerOverlap="false"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:id="@+id/LinhaFormMarca"
                        style="@style/form_linha"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:id="@+id/taux"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        fontPath="fonts/Roboto-Light.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Taux d'echange"
                                        android:textColor="@color/green_dark"
                                        android:textSize="16sp" />

                                    <org.fabiomsr.moneytextview.MoneyTextView
                                        android:id="@+id/TV_Taux"
                                        fontPath="fonts/Roboto-Light.ttf"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30sp"
                                        app:amount="1630.0"
                                        app:symbol="Fc"
                                        app:baseTextColor="@color/md_deep_orange_500"
                                        app:baseTextSize="30sp"
                                        app:symbolTextSize="20sp"
                                        app:decimalSeparator=","
                                        app:symbolGravity="bottom"
                                        android:textColor="@color/green_dark" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/LinhaFormCombustivel"
                    style="@style/form_linha"
                    android:layout_marginTop="@dimen/form_margem_top">

                    <ImageView
                        android:id="@+id/IV_TipoVeiculo"
                        style="@style/form_icon_left"
                        app:srcCompat="@drawable/ic_form_despesa" />

                    <LinearLayout style="@style/form_linha_divisor">

                        <Spinner
                            android:entries="@array/option_devise_conversion"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="-8dp"
                            android:id="@+id/SP_TypeEnvoi"
                            style="@style/form_spinner" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinhaFormModelo"
                    style="@style/form_linha">

                    <ImageView
                        style="@style/form_icon_left"
                        app:srcCompat="@drawable/ic_form_valor" />

                    <LinearLayout style="@style/form_linha_divisor">

                        <org.fabiomsr.moneytextview.MoneyTextView
                            android:id="@+id/ET_Montant"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            style="@style/form_edit_text"
                            app:amount="0.0"
                            app:symbol="Fc"
                            app:baseTextColor="@color/texto"
                            app:baseTextSize="14sp"
                            app:symbolTextSize="14sp"
                            app:decimalSeparator=","
                            app:decimalGravity="bottom"
                            app:symbolGravity="bottom"
                            app:gravity="left"
                            android:textColor="@color/green_dark" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/BTN_Conversion"
                    style="@style/botao_azul_canto_redondo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="Convertir"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>