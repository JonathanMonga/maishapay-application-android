<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:id="@+id/root">

    <include layout="@layout/appbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_weight="1.0">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:text="Ouverture d'un compte d'epargne personelle"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_margin="5dp"
                    android:layout_height="1dp"
                    android:background="@color/ab_despesa"/>

                <LinearLayout
                    android:id="@+id/LinhaFormMarca"
                    style="@style/form_linha">

                    <ImageView
                        android:id="@+id/IV_LogoMarca"
                        style="@style/form_icon_left"
                        app:srcCompat="@drawable/ic_form_data_hora" />

                    <LinearLayout
                        android:id="@+id/LinhaFormDivisorMarca"
                        style="@style/form_linha_divisor"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/ET_Date"
                                style="@style/form_edit_text"
                                android:layout_weight="1.0"
                                android:hint="Date de cloture"
                                android:nextFocusDown="@+id/ET_Montant" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LinhaFormCombustivel"
                    style="@style/form_linha"
                    android:layout_marginTop="@dimen/form_margem_top">

                    <ImageView
                        android:id="@+id/IV_TipoVeiculo"
                        style="@style/form_icon_left"
                        app:srcCompat="@drawable/ic_form_despesa" />

                    <LinearLayout style="@style/form_linha_divisor">

                        <Spinner
                            android:entries="@array/option_epargne_devise"
                            android:spinnerMode="dropdown"
                            android:layout_marginLeft="-8dp"
                            android:id="@+id/SP_TypeEnvoi"
                            style="@style/form_spinner" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/LinhaFormModelo"
                    style="@style/form_linha">

                    <ImageView
                        style="@style/form_icon_left"
                        app:srcCompat="@drawable/ic_form_valor" />

                    <LinearLayout style="@style/form_linha_divisor">

                        <EditText
                            android:id="@+id/ET_CodeSecret"
                            style="@style/form_edit_text"
                            android:inputType="textPassword"
                            android:hint="CrÃ©e un code secret" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/form_linha">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.SwitchCompat
                            android:id="@+id/SwitchCompat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="J'accepte les conditions" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/BTN_Valider"
                    style="@style/botao_azul_canto_redondo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10.0dip"
                    android:text="Valider"
                    android:enabled="false"
                    android:textAllCaps="false"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>