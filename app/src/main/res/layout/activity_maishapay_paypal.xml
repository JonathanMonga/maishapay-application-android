<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <include layout="@layout/appbar"/>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="30dp"
                    android:text="Effectuer un depot a partir de votre compte paypal ou visa"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/paypal" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/maishapay_logo" />
                </LinearLayout>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="30dp"
                    android:text="Vous allez Ãªtre rediriger vers l'api de paypal" />

                <LinearLayout
                    android:id="@+id/LinhaFormModelo"
                    style="@style/form_linha">

                    <ImageView
                        style="@style/form_icon_left"
                        app:srcCompat="@drawable/ic_form_valor" />

                    <LinearLayout style="@style/form_linha_divisor">

                        <org.fabiomsr.moneytextview.MoneyTextView
                            android:id="@+id/ET_Montant"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            style="@style/form_edit_text"
                            app:amount="0.0"
                            app:symbol="Fc"
                            app:baseTextColor="@color/texto"
                            app:baseTextSize="14sp"
                            app:symbolTextSize="14sp"
                            app:decimalSeparator=","
                            app:symbolGravity="bottom"
                            app:gravity="left"
                            android:textColor="@color/green_dark" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnPayNow"
        style="@style/botao_azul_canto_redondo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0dip"
        android:text="Transferer"
        android:textAllCaps="false"/>
</LinearLayout>